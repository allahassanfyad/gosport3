<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backdemart">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Name Address"
        android:textColor="@color/colorWhith"
        android:textSize="12sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@+id/txtnameaddress"
        app:layout_constraintStart_toStartOf="@+id/txtnameaddress" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Street Name "
        android:textColor="@color/colorWhith"
        android:textSize="12sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@+id/txtstrname"
        app:layout_constraintStart_toStartOf="@+id/txtstrname" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Building Number "
        android:textColor="@color/colorWhith"
        android:textSize="12sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@+id/txtbuildingnumber"
        app:layout_constraintStart_toStartOf="@+id/txtbuildingnumber" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Phone Number"
        android:textColor="@color/colorWhith"
        android:textSize="12sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@+id/txtnumberphone"
        app:layout_constraintStart_toStartOf="@+id/txtnumberphone" />

    <TextView
        android:id="@+id/txtView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="New Address"
        android:textAllCaps="true"
        android:textColor="@color/colorWhith"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtnameaddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="24dp"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="@color/colorWhith"
        android:textColorHint="@color/colorWhith"
        android:textSize="14sp"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtView" />


    <EditText
        android:id="@+id/txtbuildingnumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="@color/colorWhith"
        android:textColorHint="@color/colorWhith"
        android:textSize="14sp"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="@+id/txtnameaddress"
        app:layout_constraintStart_toStartOf="@+id/txtnameaddress"
        app:layout_constraintTop_toBottomOf="@+id/txtnameaddress" />

    <EditText
        android:id="@+id/txtnumberphone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:inputType="phone"
        android:maxLength="15"
        android:singleLine="true"
        android:textColor="@color/colorWhith"
        android:textColorHint="@color/colorWhith"
        android:textSize="14sp"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="@+id/txtbuildingnumber"
        app:layout_constraintStart_toStartOf="@+id/txtbuildingnumber"
        app:layout_constraintTop_toBottomOf="@+id/txtbuildingnumber" />

    <EditText
        android:id="@+id/txtstrname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:singleLine="true"
        android:textColor="@color/colorWhith"
        android:textColorHint="@color/colorWhith"
        android:textSize="14sp"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="@+id/txtnumberphone"
        app:layout_constraintStart_toStartOf="@+id/txtnumberphone"
        app:layout_constraintTop_toBottomOf="@+id/txtnumberphone" />

    <Button
        android:id="@+id/btnaddaddress"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/signin"
        android:text="ADD"
        android:textAllCaps="false"
        android:textColor="@color/colorWhith"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtstrname"
        app:layout_constraintStart_toStartOf="@+id/txtstrname"
        app:layout_constraintTop_toBottomOf="@+id/txtstrname" />


</android.support.constraint.ConstraintLayout>